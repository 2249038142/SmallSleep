/* component/timer.wxss */

.container {
  height: 100%;
  background: grey; 
}
.voice{
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  right:50rpx;
  top:150rpx;
  z-index: 2;
}
.time-fix {
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: fixed;
   margin:0 auto;
  left: 0;
  right: 0;
  top: 40%;
  width:300rpx;
}

.time-wrap {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 300rpx;
  height: 300rpx;
  text-align: center;
  transition: all 0.3s;
}
.time-mask::before{
  content: '';
  position: absolute;

  filter: blur(20px);
  margin: -30px;

}
.time-mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  border: 3px solid #82c4f0;
  opacity: 0.5;
  border-radius: 50%;
    background: hsla(0,0%,100%,.1);
    filter: blur(2px);
}
.time-mask-animation{
	animation:breathe 4000ms ease-in-out infinite alternate;

}
@keyframes breathe {
	0% {
/*	opacity:.2;*/
	box-shadow:0 1px 2px rgba(255,255,255,0.1);
}
100% {
	/*opacity:1;*/
	border:1px solid rgba(59,235,235,1);
	box-shadow:0 1px 50px rgba(59,255,255,1);
}
}
.time-progress {
  position: absolute;
  top: 0;
  width: 150rpx;
  height: 300rpx;
  overflow: hidden;
  transition: all 0.3s;
}

.t-left {
  left: 0;
}

.t-right {
  right: 0;
}

.time-circle {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 300rpx;
  height: 300rpx;
  border: 3px solid transparent;
  border-radius: 50%;
  transition: all 0.3s;
  box-sizing: border-box;
}

.tc-left {
  left: 0;
  border-left: 3px solid #fff;
  border-bottom: 3px solid #fff;
  transform: rotate(45deg);
  
}

.tc-right {
  right: 0;
  border-right: 3px solid #fff;
  border-bottom: 3px solid #fff;
  transform: rotate(-45deg);
 
}

.c-white {
  color: white;
}

.c-time {
  font-size: 150%;
}

.c-action {
  margin-top: 40rpx;
  width: 200rpx;
  height: 80rpx;
  border: 4rpx solid white;
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: Center;
}

.bgm-swiper {
  position: absolute;
  width: 100%;
  height: 100%;
}

.bg {
  height: 100%;
}

.bg text {
  color: white;
  display: flex;
  justify-content: center;
  transform: translateY(160rpx);
}
.time-grey{
  font-size: 80%;
  color: rgb(138, 134, 148)
}
